#define _CRT_SECURE_NO_WARNINGS

#include <stdio.h>
#include <stdlib.h>
#include <string.h>



int main() {
    int height, length;
    printf("Enter the height of the square: ");
    scanf("%d", &height);
    printf("Enter the length of the square: ");
    scanf("%d", &length);

    for (int i = 1; i <= height; i++) 
    {
        for (int j = 1; j <= length; j++) 
        {
            if (i == 1 || i == height || j == 1 || j == length) 
            {
                printf("x");
            }
            else {
                printf(" ");
            }
        }
        printf("\n");
    }
    return 0;
}
